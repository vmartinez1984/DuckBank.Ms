      //  }
      //},
      {
        "Name": "MongoDB",
        "Args": {
          "databaseUrl": "mongodb://root:123456@192.168.1.142:27017/AhorrosMsLog?ssl=false&authSource=admin",
          "collectionName": "logs",
          "cappedMaxSizeMb": 1024,
          "cappedMaxDocuments": 100000
        }
      }
    ],
