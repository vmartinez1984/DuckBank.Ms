{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "Enabled": true,
      "MinimumLevel": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDb": "mongodb://root:123456@192.168.1.142:27017/AhorrosMs?ssl=false&authSource=admin"
  },
  "MostrarErrores": false,
  "Ambiente": "Produccion",
